<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UrunDetay">

    <TextView
        android:id="@+id/txtBaslik"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="@string/title_urunDetayBaslik"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:gravity="center_horizontal|center"
        android:background="@drawable/grad_bg"/>

    <TextView
        android:id="@+id/txtUrunDetay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="126dp"
        android:gravity="center_horizontal|center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnArttır"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="245dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/ic_action_name" />

    <Button
        android:id="@+id/btnAzalt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnArttır"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-43dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ic_minus" />


    <Button
        android:id="@+id/btnSepeteEkle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="120dp"
        android:text="Sepete Ekle" />

    <TextView
        android:id="@+id/txtUrunAdet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="85dp"
        android:text="1"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtUrunFiyat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="358dp"
        android:gravity="center_horizontal|center"
        android:textSize="40sp" />


</RelativeLayout>